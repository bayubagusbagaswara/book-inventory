{
  // EDITOR
  "editor.formatOnSave": true,
  "editor.lineHeight": 20,
  "editor.minimap.enabled": true,
  "editor.fontSize": 11,
  "editor.fontLigatures": false,
  "editor.fontFamily": " 'Jetbrains Mono', Consolas, 'Courier New', monospace ",
  "editor.wordWrap": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // TERMINAL
  "terminal.integrated.fontSize": 13,

  // WORKBENCH
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    // editor
    "editor.background": "#171717",
    "editorLineNumber.activeForeground": "#35d7dd",

    // selection highlight
    "editor.selectionBackground": "#366ea350",
    "editor.lineHighlightBackground": "#63636331",

    // tab atas
    "tab.activeBackground": "#171717",
    "tab.hoverBackground": "#171717",
    "tab.hoverForeground": "#ffff",

    // Bar kiri
    "activityBarBadge.background": "#16d8df9c",

    // terminal bawah
    "terminal.background": "#18181a",
    "terminal.ansiGreen": "#069435",
    "terminal.ansiMagenta": "#da1cda",
    "terminal.ansiYellow": "#cfc30f"
  },

  "php.suggest.basic": false,
  "php.validate.executablePath": "E:/XAMPP/php/php.exe",
  "liveServer.settings.port": 5502,
  "emmet.includeLanguages": {
    "javascript": "html"
  },

  //   COMMENTS BETTER
  "better-comments.multilineComments": true,
  "better-comments.highlightPlainText": false,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  "files.autoSave": "onWindowChange",
  "C_Cpp.default.compilerPath": "C:/msys64/mingw64/ucrt64/bin/gcc.exe",
  "C_Cpp.default.includePath": [
    "C:/msys64/mingw64/ucrt64/include",
    "C:/msys64/usr/include"
  ],
  "files.associations": {
    "stdio.h": "c"
  }
}
